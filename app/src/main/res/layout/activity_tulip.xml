<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/category"
            android:background="#C3000000"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/back"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/back"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:onClick="goToHome"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            </ImageView>


            <HorizontalScrollView
                android:layout_width="360dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:padding="15dp">

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed-light"
                            android:padding="5dp"
                            android:text="All"
                            android:clickable="true"
                            android:onClick="goToAllFlowers"
                            android:textAlignment="center"
                            android:textSize="15dp"></TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed-light"
                            android:padding="5dp"
                            android:text="Rose"
                            android:clickable="true"
                            android:onClick="goToRose"
                            android:textAlignment="center"
                            android:textSize="15dp"></TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed-light"
                            android:padding="5dp"
                            android:text="Lavender"
                            android:clickable="true"
                            android:onClick="goToLavender"
                            android:textAlignment="center"
                            android:textSize="15dp"></TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:background="#454444"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed-light"
                            android:padding="5dp"
                            android:text="Tulip"
                            android:clickable="true"
                            android:onClick="goToTulip"
                            android:textAlignment="center"
                            android:textSize="15dp"></TextView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CategoryTxt"
            android:layout_below="@id/category"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:textSize="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="19dp"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tulips"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/one"
            android:layout_below="@id/CategoryTxt"
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="190dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="260dp">
                        <androidx.cardview.widget.CardView
                            android:backgroundTint="#ECE7E7"
                            android:layout_marginTop="220dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Tulip"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-condensed-light"
                                android:textSize="15dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Buy Now"
                                android:textAlignment="center"
                                android:layout_marginTop="18dp"
                                android:fontFamily="sans-serif-condensed-light"
                                android:textSize="15dp">

                            </TextView>
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:clickable="true"
                            android:onClick="goToBuyTulip"
                            android:background="@drawable/tulip"
                            android:layout_width="match_parent"
                            android:layout_height="220dp">

                        </ImageView>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
